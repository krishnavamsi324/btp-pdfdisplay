<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:macros="sap.fe.macros"
>
    <VBox
        id="_IDGenVBox1"
        core:require="{ handler: 'pdfdisplay/ext/fragment/PDF'}"
    >
        <Button
            id="_IDGenButton1"
            text="Pdf_view"
            press="handler.onPress"
        />
        <!-- <Button id="toggleButton" text="PDF Visibility" press="handler.onTogglePdfVisibility"/> -->
        <PDFViewer
            id="pdfViewer"
            source="https://www.antennahouse.com/hubfs/xsl-fo-sample/pdf/basic-link-1.pdf"
            isTrustedSource="true"
            displayType="Embedded"
            visible="false"
            width="100%"
            height="600px"
        />
    </VBox>
</core:FragmentDefinition>
